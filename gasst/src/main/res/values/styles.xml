<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">?attr/colorPrimary</item>
        <!--<item name="searchViewStyle">@style/SearchViewStyle</item>-->

        <!--<item name="popupMenuStyle">@style/popupMenuStyle</item>-->
        <!--<item name="popupTheme">@style/popupTheme</item>-->
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>

        <!-- Customize your theme here. -->

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/white</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/white</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/white</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="popupTheme" parent="AppTheme">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="popupMenuStyle" parent="Base.Widget.AppCompat.PopupMenu.Overflow">
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="BaseDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_second_color_primary</item>
        <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>

    <style name="LightPinkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/light_pink</item>
        <item name="colorPrimaryDark">@color/dark_light_pink</item>
        <item name="colorAccent">@color/light_pink</item>
    </style>

    <style name="GrayTheme" parent="AppTheme">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/gray</item>
    </style>

    <style name="BlueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/accent_blue</item>
    </style>

    <style name="BlueDialogTheme" parent="BaseDialogTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/accent_blue</item>
    </style>

    <style name="YellowTheme" parent="AppTheme">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/dark_yellow</item>
        <item name="colorAccent">@color/accent_yellow</item>
    </style>

    <style name="YellowDialogTheme" parent="BaseDialogTheme">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/dark_yellow</item>
        <item name="colorAccent">@color/accent_yellow</item>
    </style>

    <style name="DeepPurpleTheme" parent="AppTheme">
        <item name="colorPrimary">@color/deep_purple</item>
        <item name="colorPrimaryDark">@color/dark_deep_purple</item>
        <item name="colorAccent">@color/accent_deep_purple</item>
    </style>

    <style name="DeepPurpleDialogTheme" parent="BaseDialogTheme">
        <item name="colorPrimary">@color/deep_purple</item>
        <item name="colorPrimaryDark">@color/dark_deep_purple</item>
        <item name="colorAccent">@color/accent_deep_purple</item>
    </style>

    <style name="PinkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/dark_pink</item>
        <item name="colorAccent">@color/accent_pink</item>
    </style>

    <style name="PinkDialogTheme" parent="BaseDialogTheme">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/dark_pink</item>
        <item name="colorAccent">@color/accent_pink</item>
    </style>

    <style name="GreenTheme" parent="AppTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
    </style>

    <style name="GreenDialogTheme" parent="BaseDialogTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
    </style>

    <style name="BrownTheme" parent="AppTheme">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/dark_brown</item>
        <item name="colorAccent">@color/accent_brown</item>
    </style>

    <style name="BrownDialogTheme" parent="BaseDialogTheme">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/dark_brown</item>
        <item name="colorAccent">@color/accent_brown</item>
    </style>

    <!-- Application theme. -->
    <style name="PureNoteTheme" parent="android:Theme.Light"></style>

</resources>