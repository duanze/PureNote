<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rv_item_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/rv_item_margin"
    android:padding="@dimen/rv_item_padding_left_right">

    <com.duanze.gasst.ui.view.MinusTextView
        android:id="@+id/note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/dimgrey"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/note_content"
        android:gravity="center|right"
        android:textColor="@color/darkgrey"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/alert_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/note_content"
        android:gravity="center|left"
        android:textColor="@color/darkgrey"
        android:textSize="11sp"/>
</RelativeLayout>